    TextBox.Size = UDim2.new(0, 200, 0, 50)
    TextBox.Text = text!"
    TextBox.TextColor3 = Color3.fromRGB(162, 129, 90)
    TextBox.TextScaled = true
    TextBox.TextSize = 14.000
    TextBox.TextWrapped = true
end 

